<%= govuk_cookie_banner do |cb| %>
  <% cb.with_message(heading_text: "Cookies on Request personal information") do |m| %>
    <% m.with_action { govuk_button_link_to("Accept analytics cookies", "/cookies/accept") } %>
    <% m.with_action { govuk_button_link_to("Reject analytics cookies", "/cookies/reject") } %>
    <% m.with_action { govuk_link_to("View cookies", cookies_consent_path) } %>

    <p class="govuk-body">
      We use some essential cookies to make this service work.
    </p>
    <p class="govuk-body">
      We'd also like to use analytics cookies so we can understand
      how you use the service and make improvements.
    </p>
  <% end %>
<% end %>
