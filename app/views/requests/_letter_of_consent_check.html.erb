<%= govuk_table do |table| %>
  <% table.with_body do |body| %>
    <% body.with_row do |row| %>
      <% row.with_cell(header: true, text: 'Photo ID') %>
      <% row.with_cell(text: @information_request.requester_photo.to_s) %>
      <% row.with_cell do %>
        <%= link_to "Change", "/letter-of-consent", class: "govuk-link" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= f.govuk_collection_radio_buttons :letter_of_consent_check, @form.class::OPTIONS, :first, :second %>
<%= f.hidden_field :default %>
