<% content_for :title do %>
  <%= t("request_form.#{@form.name}.#{@information_request.subject}") %>
<% end %>

<% content_for :caption do %>
  <%= t("service.prison.name") %>
<% end %>

<% if @information_request.for_self? %>
  <%= f.govuk_text_field :recent_prison_name, label: nil %>
<% else %>
  <%= f.govuk_radio_buttons_fieldset :hmpps_information, legend: nil do %>
    <%= f.govuk_radio_button :currently_in_prison, "yes", label: { text: "Yes" } do %>
      <%= f.govuk_text_field :current_prison_name, label: { size: "s", text: t("helpers.label.request_form.current_prison_name") } %>
    <% end %>
    <%= f.govuk_radio_button :currently_in_prison, "no", label: { text: "No" } do %>
      <%= f.govuk_text_field :recent_prison_name, label: { size: "s", text: t("helpers.label.request_form.recent_prison_name") } %>
    <% end %>
  <% end %>
  <%= f.hidden_field :default %>
<% end %>
