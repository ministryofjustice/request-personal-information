<%= govuk_table do |table| %>
  <% # table.with_caption(size: 'm', text: "Check Uploads") %>

  <% table.with_head do |head| %>

  <% end %>

  <% table.with_body do |body| %>
    <% body.with_row do |row| %>
      <% row.with_cell(header: true, text: 'Photo ID') %>
      <% row.with_cell(text: @information_request.subject_photo.to_s) %>
      <% row.with_cell do %>
        <%= link_to "Change", "/subject-id", class: "govuk-link" %>
      <% end %>
    <% end %>

    <% body.with_row do |row| %>
      <% row.with_cell(header: true, text: 'Proof of address') %>
      <% row.with_cell(text: @information_request.subject_photo.to_s) %>
      <% row.with_cell do %>
        <%= link_to "Change", "/subject-id", class: "govuk-link" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>


<%= f.govuk_collection_radio_buttons :subject_id_check, @form.class::OPTIONS, :first, :second %>
<%= f.hidden_field :default %>
