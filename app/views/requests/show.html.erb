<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_back_link(href: back_request_path) %>

    <h1 class="govuk-heading-xl">Check your answers</h1>

    <%= govuk_summary_list do |summary_list|
      summary_list.with_row do |row|
        row.with_key { t("request_form.subject") }
        row.with_value { RequestForm::Subject::OPTIONS[@information_request.subject.to_sym] }
        row.with_action(text: "Change", href: back_request_path("subject"), visually_hidden_text: t("request_form.subject"))
      end;
    end %>

    <h3 class="govuk-heading-m"><%= "#{@information_request.possessive_pronoun.capitalize} details" %></h3>
    <%= govuk_summary_list rows: @subject_summary %>

    <% if @requester_summary.present? %>
      <h3 class="govuk-heading-m">Your details</h3>
      <%= govuk_summary_list rows: @requester_summary %>
    <% end %>

    <% if @requester_id_summary.present? %>
      <h3 class="govuk-heading-m">Upload your ID</h3>
      <%= govuk_summary_list rows: @requester_id_summary %>
    <% end %>

    <% if @subject_id_summary.present? %>
      <h3 class="govuk-heading-m">Upload their ID</h3>
      <%= govuk_summary_list rows: @subject_id_summary %>
    <% end %>

    <h3 class="govuk-heading-m"><%= t("request_form.moj") %></h3>
    <%= govuk_summary_list rows: @information_summary %>

    <% if @prison_summary.present? %>
      <h3 class="govuk-heading-m"><%= t("service.prison.name") %></h3>
      <%= govuk_summary_list rows: @prison_summary %>
    <% end %>

    <% if @probation_summary.present? %>
      <h3 class="govuk-heading-m"><%= t("service.probation.name") %></h3>
      <%= govuk_summary_list rows: @probation_summary %>
    <% end %>

    <% if @laa_summary.present? %>
      <h3 class="govuk-heading-m"><%= t("service.laa.name") %></h3>
      <%= govuk_summary_list rows: @laa_summary %>
    <% end %>

    <% if @opg_summary.present? %>
      <h3 class="govuk-heading-m"><%= t("service.opg.name") %></h3>
      <%= govuk_summary_list rows: @opg_summary %>
    <% end %>

    <% if @moj_other_summary.present? %>
      <h3 class="govuk-heading-m"><%= t("service.other.name") %></h3>
      <%= govuk_summary_list rows: @moj_other_summary %>
    <% end %>

    <h3 class="govuk-heading-m"><%= t("request_form.contact_address") %></h3>
    <%= govuk_summary_list rows: @contact_summary %>

    <h3 class="govuk-heading-m">Now send your request</h3>
    <p class="govuk-body">By sending this request you confirm that, to the best of your knowledge, the details you are providing are correct.<p>
    <p class="govuk-body">You might want to save or print this page for your own records.</p>

    <%= govuk_button_to "Accept and send request", '#' %>
  </div>
</div>
