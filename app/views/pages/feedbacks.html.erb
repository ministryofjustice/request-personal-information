<%= govuk_link_to("Home", "/") %>
<%= govuk_label text: 'Give feedback on Request personal information', tag: 'h2', size: 'l' %>
<%= form_with(model: @feedbacks, local: true) do |f| %>
  <%= f.govuk_collection_radio_buttons :service_satisfaction_level,
                                       [[1, 'Very satisfied'], [2, 'Satisfied'], [3, 'Neither satisfied or dissatisfied'], [4, 'Dissatisfied'], [5, 'Very dissatisfied']],
                                       :first,
                                       :last,
                                       legend: { text: 'Satisfaction survey' },
                                       hint: { text: '<strong>Overall, how did you feel about the service you received today?</strong>'.html_safe } %>
  <%= f.label :comments, "How could we improve this service?", class: "govuk-label govuk-label--s" %>
  <%= f.govuk_text_area :comments, label: { text: 'Do not include any personal or financial information, for example your National Insurance or credit card numbers.' }, max_words: 1200 %>
  <%= f.govuk_submit %>
<% end %>
